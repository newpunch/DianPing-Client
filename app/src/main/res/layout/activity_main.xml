<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_bottom_tabs"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_home_selector"
            android:textColor="@drawable/main_color_selector"
            android:padding="@dimen/littel_space"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:gravity="center"
            android:button="@null"
            android:text="首页"/>
        <RadioButton
            android:id="@+id/main_tuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_tuan_selector"
            android:textColor="@drawable/main_color_selector"
            android:padding="@dimen/littel_space"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:gravity="center"
            android:button="@null"
            android:text="团购"/>
        <RadioButton
            android:id="@+id/main_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableTop="@drawable/main_search_selector"
            android:textColor="@drawable/main_color_selector"
            android:padding="@dimen/littel_space"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:text="搜索"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:button="@null"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_my"
            android:gravity="center"
            android:drawableTop="@drawable/main_my_selector"
            android:textColor="@drawable/main_color_selector"
            android:padding="@dimen/littel_space"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:text="我的"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:button="@null"/>
    </RadioGroup>





</LinearLayout>
